{
  "name": "deva3/framework",
  "description": "Framework de test en PHP",
  "type": "project",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "FrameworkDevA3": "src/"
    }
  },
  "license": "MIT",
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs --colors -p ./src ./tests",
    "cs-fix": "phpcbf --colors ./src ./tests",
  }
}
